# Reddit API credentials
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=script:reddit-digest:v1.0 (by /u/your_username)

# Email configuration
EMAIL_SENDER=your_email@gmail.com
EMAIL_RECIPIENT=recipient_email@example.com
EMAIL_PASSWORD=your_app_password  # Gmail app password, not your regular password
SMTP_SERVER=smtp.gmail.com  # Default for Gmail
SMTP_PORT=587  # Default STARTTLS port for Gmail

# Schedule settings
SCHEDULE_TIME=09:00  # Default time to send digest (24-hour format)
RUN_ONCE=false
